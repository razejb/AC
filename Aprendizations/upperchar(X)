XXXXXXXXXXXXXXXXXXXXX -------------- POR ACABAR -------------- XXXXXXXXXXXXXXXXXXXXX

upperchar:
	addi sp, sp, -4     # reserva espaço na pilha para salvar o registrador ra
	sw ra, 0(sp)        # salva o registrador ra na pilha

	lb t0, 0(a0)        # carrega o caractere em a0

	li t1, 96           # carácter 'a' em ASCII
	li t2, 122          # carácter 'z' em ASCII

	blt t0, t1, exit    # se o caractere for menor que 'a', sai da função
	bgt t0, t2, exit    # se o caractere for maior que 'z', sai da função

	addi a0, t0, -32    # converte a letra minúscula em maiúscula, alterando o valor em t0

exit:
	lw ra, 0(sp)        # restaura o registrador ra
	addi sp, sp, 4      # libera o espaço na pilha
	ret                 # retorna para o chamador
