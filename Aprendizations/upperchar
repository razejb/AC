upperchar:
    addi sp, sp, -4      # reserva espaço na pilha para salvar o registrador ra
    sw ra, 0(sp)         # salva o registrador ra na pilha

    bge a0, 97, convert   # verifica se o caractere em a0 é uma letra minúscula

exit:
    lw ra, 0(sp)         # restaura o registrador ra
    addi sp, sp, 4       # libera o espaço na pilha
    ret                  # retorna para o chamador

convert:
    addi a0, a0, -32     # converte a letra minúscula para maiúscula, alterando o valor em a0
    j exit               # pula para o rótulo exit
